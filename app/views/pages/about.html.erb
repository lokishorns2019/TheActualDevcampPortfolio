<div class="app-card-container">
    <div class="card">
        <h1>About Me</h1>

        <hr>
        
        <div class="row">
            <div class="col-md-6">
                <%= image_tag "Profile.jpg", width: 450, alt: "profile image", class: 'profile-img' %>
            </div>
            
            <div class="col-md-6">
                <p>Description of me.</p>
                
                <p>
                    <button
                      class="btn btn-outline-info"
                      type="button"
                      data-toggle="collapse"
                      data-target="#jobHistory"
                      aria-expanded="false"
                      aria-controler="jobHistory"
                    >
                        Job History ▼
                    </button>
                    <button
                      class="btn btn-outline-info"
                      type="button"
                      data-toggle="collapse"
                      data-target="#education"
                      aria-expanded="false"
                      aria-controler="education"
                    >
                        Education ▼
                    </button>
                </p>
                
                <p>
                    <div class="collapse" id="jobHistory">
                        <div class="card card-block">
                            Job 1
                        </div>
                        <div class="card card-block">
                            Job 2
                        </div>
                    </div>
                    
                    <div class="collapse" id="education">
                        <div class="card card-block">
                            GTI
                        </div>
                        <div class="card card-block">
                            Code to success 2017
                        </div>
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>