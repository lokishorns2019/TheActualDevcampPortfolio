<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Thor Madsen's Portfolio", sticky: false) %>
  <% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Thor Madsen's Portfolio", sticky: false) %>
  <% else %>
  <%= js add_gritter(flash[:notice], title: "Thor Madsen's Portfolio", sticky: false) %>
<% end %>